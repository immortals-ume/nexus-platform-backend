<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-countries-table" author="auth-service">
        <createTable tableName="countries" schemaName="user_auth">
            <!-- Primary Key -->
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Business Fields -->
            <column name="country_name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="country_code" type="VARCHAR(5)">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="active_ind" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <!-- Audit Fields -->
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="updated_date" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(255)"/>
            <column name="deleted_date" type="TIMESTAMP"/>
        </createTable>

        <!-- Create indexes -->
        <createIndex indexName="idx_countries_name" tableName="countries" schemaName="user_auth">
            <column name="country_name"/>
        </createIndex>
        
        <createIndex indexName="idx_countries_code" tableName="countries" schemaName="user_auth">
            <column name="country_code"/>
        </createIndex>

        <rollback>
            <dropTable tableName="countries" schemaName="user_auth" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
