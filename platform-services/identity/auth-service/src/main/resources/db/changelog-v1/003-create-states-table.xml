<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-states-table" author="auth-service">
        <createTable tableName="states" schemaName="user_auth">
            <!-- Primary Key -->
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Business Fields -->
            <column name="state_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="state_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            
            <column name="country_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="active_ind" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <!-- Audit Fields -->
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="updated_date" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(255)"/>
            <column name="deleted_date" type="TIMESTAMP"/>
        </createTable>

        <!-- Add foreign key -->
        <addForeignKeyConstraint
                baseTableSchemaName="user_auth"
                baseTableName="states"
                baseColumnNames="country_id"
                constraintName="fk_states_country"
                referencedTableSchemaName="user_auth"
                referencedTableName="countries"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>

        <!-- Create indexes -->
        <createIndex indexName="idx_states_country_id" tableName="states" schemaName="user_auth">
            <column name="country_id"/>
        </createIndex>
        
        <createIndex indexName="idx_states_name" tableName="states" schemaName="user_auth">
            <column name="state_name"/>
        </createIndex>

        <!-- Add unique constraint -->
        <addUniqueConstraint
                schemaName="user_auth"
                tableName="states"
                columnNames="state_name, country_id"
                constraintName="uk_states_name_country"/>

        <rollback>
            <dropTable tableName="states" schemaName="user_auth" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
