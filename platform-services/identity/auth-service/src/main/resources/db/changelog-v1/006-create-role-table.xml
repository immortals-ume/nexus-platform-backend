<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-role-table" author="auth-service">
        <createTable tableName="role" schemaName="user_auth">
            <!-- Primary Key -->
            <column name="role_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>

            <!-- Business Fields -->
            <column name="role_name" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="description" type="VARCHAR(200)"/>
            
            <column name="active_ind" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <!-- Audit Fields -->
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="updated_date" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(255)"/>
            <column name="deleted_date" type="TIMESTAMP"/>
        </createTable>

        <!-- Create index -->
        <createIndex indexName="idx_role_name" tableName="role" schemaName="user_auth">
            <column name="role_name"/>
        </createIndex>

        <!-- Add unique constraint -->
        <addUniqueConstraint
                schemaName="user_auth"
                tableName="role"
                columnNames="role_name"
                constraintName="uk_role_name"/>

        <rollback>
            <dropTable tableName="role" schemaName="user_auth" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
